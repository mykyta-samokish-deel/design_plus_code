%section.articles
  .flex.flex--center

    .col-50
      .article-wrap
        {% for post in site.posts limit: 12 %}
        %a.article-thumb{ href: "{{post.url}}", style: "background-image: url(assets/img/posts/thumbnails/{{post.thumbnail}});" }
          .article-meta
            .name {{post.title}}
            .date {{post.date: "%b %d, %Y"}}
        {% endfor %}

    .col-50.flex.flex--center.order-first
      .col-1
        .desc-wrap
          %p.home-lead.outdented ...Writing and designing articles...
          %a.home-cta{ href: "#" } See All Articles
